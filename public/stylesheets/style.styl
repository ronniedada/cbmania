
body
    padding: 50px
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

#splitIntros
    height: 150px
    margin: 1em
    padding: 0px

#tutorial
    margin-left: 50px
    margin-right: 50px

#tutorial li #left
    color: #525044

#tutorial li #right
    font-size: 14px
    color: #838383

#splitPanes
    height: 600px
    margin: 1em
    padding: 0px

#leftPane
    min-width: 350px
    max-width: 350px

#rightPane
    margin-left: 50px

#console
    zoom: 0.75
    -moz-transform: scale(1)
    -moz-transform-origin: 0 0
    -o-transform: scale(1)
    -o-transform-origin: 0 0
    -webkit-transform: scale(1)
    -webkit-transform-origin: 0 0

#code
    width: 100%
    height: 70%

#wall
    width: 90%
    list-style: none
    padding: 1em
    margin: 1em 0

#wall li
    margin: 0.25em
    padding: 0.5em
    border-bottom: dashed 1px grey

#footer
    padding-top: 40px
    float: right
    fond: 14px
    color: #A52A2A